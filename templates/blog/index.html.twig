{% extends 'base.html.twig' %}
{% block main %}
    <h1>Article List</h1>
    <ul class="list-unstyled">
        {% for article in articles %}
            <li>
                <a href="{{ path('blog_show', {id: article.id}) }}">
                    {{ article.title }} @
                    {{ article.datetime|date('d-m-Y') }}
                </a>
            </li>
        {% else %}
            <li>
                <p>
                    There is not article, Add one ?
                </p>

            </li>
        {% endfor %}
    </ul>

    <h2>Add new article</h2>
    <form action="{{ path('blog_create') }}" method="post" class="form-inline">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title"
                   value="{{ articles ? "Articles #{(articles|length) + 1}" : "My first article" }}"
                   class="form-control" required="required"/>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <input type="text" id="content" name="content" value="" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-success">create</button>
    </form>

{% endblock %}
